<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.loginregister.mapper.UserMapper">

    <select id="selByLogin" resultType="com.yc.loginregister.bean.User">

        SELECT * FROM user where username = #{username}
        and password = #{password}

    </select>
    
    <insert id="addUser">
    	insert into user(username,password,sex,email) values(#{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR},#{sex,jdbcType=VARCHAR},
    	#{email,jdbcType=VARCHAR})
    </insert>
    
    <select id="findUser" resultType="com.yc.loginregister.bean.User">
    	select * from user where username=#{username}  
    </select>

</mapper>